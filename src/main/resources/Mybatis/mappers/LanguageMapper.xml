<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.shinhan.memento.mapper.LanguageMapper">
 
 	<select id="findLanguageById" parameterType="int" resultType="String">
 		select language_name
 		from language
 		where language_id=#{languageId}
 	</select>
 
 </mapper>